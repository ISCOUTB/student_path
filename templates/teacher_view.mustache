<div class="student-path-header mb-3">
    <img class="student-path-icon" src="{{icon_url}}" alt="Icon" style="width: 4em; height: 4em; vertical-align: middle;" />
    <h6 class="student-path-title">{{str_integrated_dashboard}}</h6>
    <span class="student-path-subtitle">{{str_course_overview}}</span>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <span class="stat-number">{{total_students}}</span>
        <span class="stat-label">{{str_total_students}}</span>
    </div>
    <div class="stat-card">
        <span class="stat-number text-success">{{complete_profiles}}</span>
        <span class="stat-label">{{str_complete_profiles}}</span>
    </div>
</div>

<div class="alert alert-info-custom text-center mb-3">
    <strong>{{completion_rate_formatted}}%</strong> {{str_completion_rate}}
</div>

<div class="student-path-card">
    <div class="card-title mb-3"><i class="fa fa-bar-chart"></i> {{str_evaluation_breakdown}}</div>
    
    {{#progress_bars}}
    <div class="progress-section">
        <div class="progress-label">
            <span>{{label}}</span>
            <span class="text-muted small">{{completed}}/{{total}}</span>
        </div>
        <div class="progress">
            <div class="progress-bar {{color_class}}" style="width: {{percentage}}%;"></div>
        </div>
    </div>
    {{/progress_bars}}
</div>

<a href="{{action_url}}" class="btn btn-primary-custom btn-block">
    <i class="fa fa-users"></i> {{str_view_identity_map}}
</a>
