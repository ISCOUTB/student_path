<div class="tmms24-summary">
    {{#user_info}}
    <div class="d-flex justify-content-center flex-wrap mb-4">
        <div class="d-flex align-items-center px-3 py-2 mx-2 mb-2 rounded-pill shadow-sm bg-white border">
            <div class="rounded-circle d-flex align-items-center justify-content-center mr-2 flex-shrink-0" style="width: 32px; height: 32px; background-color: {{gender_color}}; color: white;">
                <i class="fa {{gender_icon}}"></i>
            </div>
            <div class="d-flex flex-column">
                <small class="text-muted" style="font-size: 0.7rem; line-height: 1;">{{str_gender}}</small>
                <span class="font-weight-bold" style="line-height: 1.2;">{{gender_text}}</span>
            </div>
        </div>
        
        <div class="d-flex align-items-center px-3 py-2 mx-2 mb-2 rounded-pill shadow-sm bg-white border">
            <div class="rounded-circle d-flex align-items-center justify-content-center mr-2 flex-shrink-0" style="width: 32px; height: 32px; background-color: #ff6600; color: white;">
                <i class="fa fa-birthday-cake"></i>
            </div>
            <div class="d-flex flex-column">
                <small class="text-muted" style="font-size: 0.7rem; line-height: 1;">{{str_age}}</small>
                <span class="font-weight-bold" style="line-height: 1.2;">{{age_text}}</span>
            </div>
        </div>
    </div>
    {{/user_info}}

    <div class="emotional-intelligence-dimensions">
        <div class="tmms24-grid-container-responsive" style="grid-template-columns: 1fr !important;">
            {{#dimensions}}
            <div class="tmms24-card-item mb-3 shadow-sm bg-white overflow-hidden position-relative" style="border-radius: 12px; border-top: 4px solid {{color}} !important;">
                {{#is_star}}
                <div class="position-absolute" style="top: 10px; right: 10px; z-index: 10;">
                    <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 30px; height: 30px;" title="{{str_star_dimension}}">
                        <i class="fa fa-star"></i>
                    </div>
                </div>
                {{/is_star}}

                <div class="p-3 d-flex flex-column h-100">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box rounded-circle d-flex align-items-center justify-content-center mr-3 flex-shrink-0" style="width: 45px; height: 45px; background-color: {{bg_light}}; color: {{color}};">
                            <i class="fa {{icon}} fa-lg"></i>
                        </div>
                        <div style="flex: 1; padding-right: 20px; min-width: 0;">
                            <h6 class="font-weight-bold mb-1 text-uppercase" style="color: {{color}}; letter-spacing: 0.5px; word-break: break-word; hyphens: auto;">{{name}}</h6>
                            <small class="d-block" style="color: #6c757d; line-height: 1.3; word-break: break-word;">{{meaning}}</small>
                        </div>
                    </div>
                    
                    <div class="text-center mb-3 py-3 rounded" style="background-color: #f8f9fa;">
                        <div class="display-4 font-weight-bold" style="font-size: 2.5rem; color: {{color}};">{{score}}<span style="font-size: 1rem; color: #6c757d;">/40</span></div>
                        <div class="font-weight-bold px-2" style="font-size: 0.9rem; color: #2d3748;">{{short_interpretation}}</div>
                    </div>
                    
                    <div class="">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <small style="font-size: 0.7rem; color: #6c757d;">{{str_range}}</small>
                            <small class="font-weight-bold" style="font-size: 0.7rem; color: {{color}};">{{range_label}}</small>
                        </div>
                        
                        <div class="progress" style="height: 12px; background-color: #e9ecef; border-radius: 6px; overflow: hidden; margin-bottom: 8px;">
                            <div class="progress-bar" role="progressbar" style="width: {{progress_width}}%; {{bar_gradient_css}}" aria-valuenow="{{score}}" aria-valuemin="0" aria-valuemax="40"></div>
                        </div>
                        
                        <div class="d-flex align-items-center mt-2 mb-3">
                            <i class="fa fa-bullseye mr-2" style="font-size: 0.9rem; color: #6c757d;"></i>
                            <small style="font-size: 0.75rem; line-height: 1.3; color: #6c757d;">{{goal_string}}</small>
                        </div>
                    </div>
                    
                    <div class="mt-auto pt-3 border-top">
                        <div class="d-flex align-items-start">
                            <i class="fa fa-info-circle mr-2 mt-1" style="color: {{color}};"></i>
                            <small style="font-size: 0.85rem; line-height: 1.4; color: #6c757d;">{{long_interpretation}}</small>
                        </div>
                    </div>
                </div>
            </div>
            {{/dimensions}}
        </div>
    </div>
</div>
